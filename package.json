{
  "name": "ddsbedrocl",
  "version": "0.1.0",
  "description": "Plataforma de hosting para servidores de Minecraft (Java y Bedrock)",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "client": "cd client && npm start",
    "server": "nodemon server/index.js",
    "dev:full": "concurrently \"npm run server\" \"npm run client\"",
    "install:all": "npm install && cd client && npm install",
    "build": "cd client && npm run build"
  },
  "keywords": [
    "minecraft",
    "hosting",
    "java",
    "bedrock",
    "server"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "archiver": "^5.3.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dockerode": "^3.3.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "extract-zip": "^2.0.1",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.6",
    "morgan": "^1.10.0",
    "nodemailer": "^6.10.0",
    "redis": "^4.7.0",
    "socket.io": "^4.8.1",
    "stripe": "^12.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^2.0.22"
  }
}
